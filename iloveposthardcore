<div class="loader">
    <div class="emoji"><img src="https://64.media.tumblr.com/ef12425a534d978b88fad3c0ee586fe7/1fb6a6ebbc7d543e-fc/s400x600/e1bf262cd949aa18fb74f97dc6c31b12c26e4745.gifv"/>
     <div class="background-image">
    <div class="loading-text">I love Post Hardcore
    <div class="progress w-75 mx-auto">
      <div id="progressBar" 
           class="progress-bar progress-bar-striped progress-bar-animated bg-black" 
           role="progressbar" style="width: 0%">0%</div>
    </div>
  </div>
  
  <Script>
  let progress = 0;
    const progressBar = document.getElementById("progressBar");
    const duration = 15000; 
    const interval = 150;   
    const step = 100 / (duration / interval);
const timer = setInterval(() => {
      progress += step;
      if (progress >= 100) {
        progress = 100;
        clearInterval(timer);
        // setelah selesai, redirect ke home.html
        window.location.href = "home.html"; }
      progressBar.style.width = progress + "%";
      progressBar.innerText = Math.floor(progress) + "%";  }, interval);
</Script>

