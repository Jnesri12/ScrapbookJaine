<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function clearOptions(id) {
      const el = document.getElementById(id);
      if (el) el.remove();
    }
function addSystemMessage(text) {
      document.getElementById("chat-area").innerHTML += 
        `<div class="bubble system">${text}</div>`;
    }
    function addUserMessage(text) {
      document.getElementById("chat-area").innerHTML += 
        `<div class="bubble user">${text}</div>`;
      scrollToBottom();
    }
function scrollToBottom() {
      const chatArea = document.getElementById("chat-area");
      chatArea.scrollTop = chatArea.scrollHeight;
    }
function tulisMenu() {
      clearOptions("start-options");
      addUserMessage("‚úèÔ∏è Tulis Menu");
      addSystemMessage("Silahkan ketikkan menunya ya...");
    }
function lihatRekomendasi() {
      clearOptions("start-options");
      addUserMessage("‚≠ê Lihat Rekomendasi");
      addSystemMessage("Baiklah, kalau kamu ingin makan :");
      document.getElementById("chat-area").innerHTML += `
        <div class="options" id="rekomendasi-options">
          <button class="btn btn-danger option-btn" onclick="chooseOption('üç≤ Berat')">üç≤ Berat</button>
          <button class="btn btn-info option-btn" onclick="chooseOption('üçø Snack')">üçø Snack</button>
          <button class="btn btn-warning option-btn" onclick="chooseOption('üéÇ Dessert')">üéÇ Dessert</button>
        </div>`;    }
function scrollToBottom() {
      const chatArea = document.getElementById("chat-area");
      chatArea.scrollTop = chatArea.scrollHeight;
    }
</script>

